<a:application xmlns:a="http://ajax.org/2005/aml">
    
    <a:button id="btnSettings" skin="header-btn" class="panel-settings" />
    <a:vsplitbox anchors="0 0 0 0" splitter="true" style="position: absolute; top: 0px; right: 0px; bottom: 0px; left: 0px;">
        
        <a:vsplitbox height="50%">
            <a:vbox  anchors="0 0 0 0">
                <a:bar id="statusToolbar" skin="toolbar-top" class="fakehbox basic" align="center"/>
                <a:bar id="status" contextmenu="mnuCtxStatus" flex="1"/>
                
                <a:bar id="toolbar" skin="toolbar-top" class="fakehbox basic" align="center">
                    <a:hbox>
                        <a:button
                            id       = "btnCommit"
                            skin     = "c9-toolbarbutton-glossy"
                            caption  = "Commit"
                            visible  = "true"
                            style    = "min-width:54px;" />
                        <a:hbox flex="1"></a:hbox>
                        <a:button
                            id       = "btnReload"
                            skin     = "c9-toolbarbutton-glossy"
                            width    = "22"
                            icon     = "restart-icon.png"
                            tooltip  = "Reload"
                            class    = "light restart"
                            style    = "min-width:22px" />
                    </a:hbox>
                </a:bar>
            </a:vbox>
        </a:vsplitbox>
        <a:bar>
            <a:bar id="log" anchors="0 0 0 0">
            
            </a:bar>
            <a:bar id="commit" visible="false" anchors="0 0 0 0">
            
            </a:bar>
        </a:bar>
    </a:vsplitbox>
    <a:menu id="mnuSettings"/>
    <a:menu id="mnuCtxStatus" />
    <a:menu id="mnuCtxLog" />
    
</a:application>